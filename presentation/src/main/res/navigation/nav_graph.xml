<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/entranceFragment">

    <fragment
        android:id="@+id/entranceFragment"
        android:name="com.hypersoft.baseproject.presentation.entrance.ui.EntranceFragment"
        android:label="fragment_entrance"
        tools:layout="@layout/fragment_entrance">
        <action
            android:id="@+id/action_entranceFragment_to_languageFragment"
            app:destination="@id/languageFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/entranceFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_entranceFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/entranceFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/languageFragment"
        android:name="com.hypersoft.baseproject.presentation.language.ui.LanguageFragment"
        android:label="fragment_language"
        tools:layout="@layout/fragment_language">
        <action
            android:id="@+id/action_languageFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/languageFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.hypersoft.baseproject.presentation.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_drawerFragment"
            app:destination="@id/drawerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_dashboardFragment_to_nav_graph_media"
            app:destination="@id/nav_graph_media"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_dashboardFragment_to_inAppLanguageFragment"
            app:destination="@id/inAppLanguageFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/drawerFragment"
        android:name="com.hypersoft.baseproject.presentation.drawer.DrawerFragment"
        android:label="fragment_drawer"
        tools:layout="@layout/fragment_drawer" />

    <fragment
        android:id="@+id/premiumFragment"
        android:name="com.hypersoft.baseproject.presentation.premium.ui.PremiumFragment"
        android:label="fragment_premium"
        tools:layout="@layout/fragment_premium" />

    <fragment
        android:id="@+id/inAppLanguageFragment"
        android:name="com.hypersoft.baseproject.presentation.inAppLanguage.ui.InAppLanguageFragment"
        android:label="fragment_in_app_language"
        tools:layout="@layout/fragment_in_app_language" />

    <!-- ___________________ Global Actions ___________________ -->

    <action
        android:id="@+id/action_global_premiumFragment"
        app:destination="@id/premiumFragment"
        app:enterAnim="@anim/slide_in_bottom"
        app:exitAnim="@anim/static_anim"
        app:popEnterAnim="@anim/static_anim"
        app:popExitAnim="@anim/slide_out_bottom" />

    <!-- ___________________ Child NavGraph ___________________ -->

    <include app:graph="@navigation/nav_graph_media" />

</navigation>